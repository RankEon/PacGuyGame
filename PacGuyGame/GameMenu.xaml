<Page x:Class="PacGuyGame.GameMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacGuyGame"
      mc:Ignorable="d" 
      d:DesignHeight="875" d:DesignWidth="1250"
      Title="GameMenu" ShowsNavigationUI="False">

    <Grid>
        <Button x:Name="buttonStartGame" Content="Start Game" HorizontalAlignment="Left" Margin="0,711,0,0" VerticalAlignment="Top" Width="1250" Height="164" FontSize="96" FontWeight="Bold" FontFamily="Showcard Gothic" Click="buttonStartGame_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="711" VerticalAlignment="Top" Width="1250" Source="Graphics/Splash.png"/>

    </Grid>
</Page>
